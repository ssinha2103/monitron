# Core application configuration (local development)
DATABASE_URL=postgresql+psycopg2://monitron:monitron@db:5432/monitron
REDIS_URL=redis://redis:6379/0
JWT_SECRET_KEY=replace-me
JWT_REFRESH_SECRET_KEY=replace-me-too
INITIAL_ADMIN_EMAIL=admin@example.com
INITIAL_ADMIN_PASSWORD=change-me-please
VITE_API_BASE_URL=/api/v1
VITE_API_PROXY_TARGET=http://localhost:8080

# Cloud Run / CI configuration (used by GitHub Actions & deployment scripts)
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_AR_REPOSITORY=monitron
GCP_RUN_SERVICE_ACCOUNT=run-sa@your-project-id.iam.gserviceaccount.com
GCP_CLOUD_SQL_INSTANCE=your-project-id:us-central1:monitron-sql
API_DATABASE_URL=postgresql+psycopg2://monitron:<password>@/monitron?host=/cloudsql/${GCP_CLOUD_SQL_INSTANCE}
API_REDIS_URL=redis://<redis-host>:6379/0
API_JWT_SECRET=replace-me
API_JWT_REFRESH_SECRET=replace-me-too
WEB_API_BASE_URL=https://monitron-api-xxxxxx-uc.a.run.app/api/v1
